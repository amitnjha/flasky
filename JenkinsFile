pipeline {
    agent {
       docker{
	    image 'python:3.7.2'
       }
    }
    stages {
        stage('build') {
            steps {
               withEnv(["HOME=${env.WORKSPACE}"]){
	           sh 'pip install -r requirements.txt --user'
	       }
            }
        }
        stage('test1') {
            steps {
	      withEnv(["FLASK_CONFIG=testing","FLASK_APP=flasky"]){											   	  
	    	  sh 'python -m flask test'
	      }
            }
            post {
                always {junit 'test-reports/*.xml'}
            }
        }
	
    }
    post {
	     cleanup {
	     	     cleanWs()
	     }
	}
}