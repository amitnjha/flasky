pipeline {
    agent {
       docker{
	    image 'python:3.7.2'
       }
    }
    stages {
        stage('build') {
            steps {
               withEnv(["HOME=${env.WORKSPACE}"]){
	           sh 'pip install -r requirements.txt --user'
	       }
            }
        }
        stage('test') {
	    steps {
	      withEnv(["FLASK_CONFIG=testing","FLASK_APP=flasky","PATH=${PATH}:${env.WORKSPACE}/.local/bin"]){
		sh 'export PATH=$PATH:/var/lib/jenkins/workspace/flasky/.local/bin/'
		sh 'echo $PATH'
		sh '/var/lib/jenkins/workspace/flasky/.local/bin/flask test'
	      }
            }
            post {
                always {junit 'test-reports/*.xml'}
            }
        }
	
    }
    post {
	     cleanup {
	     	     cleanWs()
	     }
	}
}