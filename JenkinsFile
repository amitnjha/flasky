pipeline {
    agent { docker { image 'python:3.7.2' } }
    stages {
        stage('build') {
            steps {
                sh 'pip --no-cache-dir install -r requirements.txt'
            }
        }
        stage('test1') {
            steps {
                sh 'flask test'
            }
            post {
                always {junit 'test-reports/*.xml'}
            }
        }
    }
}