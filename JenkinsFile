pipeline {
    agent {
       docker{
	    image 'python:3.7.2'
       }
    }
    stages {
        stage('build') {
            steps {
               withEnv(["HOME=${env.WORKSPACE}"]){
	           sh 'pip install -r requirements.txt --user'
	       }
            }
        }
        stage('test') {
	  agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
	      withEnv(["FLASK_CONFIG=testing","FLASK_APP=flasky","PATH=$PATH:$env.WORKSPACE/.local/bin"]){											    sh 'pytest --junit-xml test-reports/results.xml'
	      }
            }
            post {
                always {junit 'test-reports/*.xml'}
            }
        }
	
    }
    post {
	     cleanup {
	     	     cleanWs()
	     }
	}
}